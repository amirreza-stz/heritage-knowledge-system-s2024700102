# Query 19: Temporal Analysis
# Analyzes recordings and restrictions over time

PREFIX : <http://www.semanticweb.org/ubuntu/ontologies/2026/0/s2024700102heritage/>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>

SELECT 
    (YEAR(?recordingDate) AS ?year)
    (COUNT(DISTINCT ?recording) AS ?recordingsCount)
    (COUNT(DISTINCT ?performer) AS ?uniquePerformers)
    (COUNT(DISTINCT ?location) AS ?locationsRecorded)
    (GROUP_CONCAT(DISTINCT ?recordingLabel; separator="; ") AS ?recordings)
WHERE {
    ?recording rdf:type :Recording .
    ?recording :recordingDate ?recordingDate .
    ?recording :performedBy ?performer .
    ?recording :recordedAt ?location .
    ?recording rdfs:label ?recordingLabel .
    FILTER(LANG(?recordingLabel) = "en" || LANG(?recordingLabel) = "")
}
GROUP BY (YEAR(?recordingDate))
ORDER BY ?year
